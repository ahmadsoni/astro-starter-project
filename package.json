{
	"name": "grapql-car-apps",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"astro": "astro",
		"build": "astro check && tsc --noEmit && astro build",
		"check": "astro check && npm run prettier:check",
		"dev": "astro dev",
		"prepare": "husky install",
		"preview": "astro preview",
		"start": "astro dev",
		"lint:scss": "stylelint \"src/**/*.{astro,scss}\"",
		"lint": "eslint .",
		"prettier:check": "prettier --cache --check --plugin-search-dir=. .",
		"format": "prettier --cache --write --plugin-search-dir=. .",
		"validate-commit-msg": "node validate-commit-msg.js"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"npm run lint --fix"
		],
		"*.{ts,tsx}": "eslint --cache --fix",
		"*.--write": "prettier --write",
		"*.{ts,css,md,html,json}": "npm run format"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged --timeout 40000 && npm run build",
			"pre-push": "npm run build",
			"commit-msg": "npm run validate-commit-msg"
		}
	},
	"dependencies": {
		"@astrojs/check": "^0.2.1",
		"astro": "^3.3.1"
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"@typescript-eslint/eslint-plugin": ">=6.0.0",
		"@typescript-eslint/parser": "^6.8.0",
		"astro-eslint-parser": "^0.16.0",
		"eslint": "^8.51.0",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-typescript": "^1.0.1",
		"eslint-plugin-astro": "^0.29.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"husky": "^8.0.0",
		"lint-staged": "^15.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-astro": "^0.12.0",
		"stylelint": "^15.11.0",
		"stylelint-config-standard": "^34.0.0",
		"typescript": "^5.2.2"
	}
}
